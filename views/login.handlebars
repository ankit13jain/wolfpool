<div class="page-header">
  <h2 align="center">Please enter your details to login</h2>
</div>

<div class="row">
  <div class="col-lg-4 col-lg-offset-4 col-sm-4 col-xs-8 col-xs-offset-2">
    <form role="form" id="login_form_id" action="/loginUser" name="login_form" method="POST" class="form-horizontal">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" placeholder="abc@xyz.edu" id="email" name="email">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="submit_id" name="Register">Login</button>
      </div>
      <div class="form-group">
        <label>New User? <a href='/register_page'>Register</a></label>
      </div>
    </form>
  </div>
</div>
<script>
  $().ready(function() {
    $("#login_form_id").validate({
      rules: {
        email: {
          required: true,
          educheck: true
        },
        password: {
          required: true,
          minlength: 6,
          pwcheck: true
        }
      },
      messages: {
        email: {
          required: "Please enter your Email Address"
        },
        password: {
          required: "Please enter Password",
          minlength: "Password should be atleast 6 character long",
          pwcheck: "Password should contain atleast one special character,one digit and one character"
        }
      }
    });
    $.validator.addMethod("pwcheck", function(value) {
      return /[a-zA-Z]/.test(value) &&
        /\d/.test(value) &&
        /[=!\-@._*#`$%^&;:?]/.test(value)
    });
    $.validator.addMethod("educheck", function(value) {
      return /^.+.edu/.test(value)
    });
  });
</script>
